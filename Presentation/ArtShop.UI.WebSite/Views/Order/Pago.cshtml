
@{
    ViewBag.Title = "Pago";
}
@using (Html.BeginForm("CrearOrden", "Order", FormMethod.Post))
{
    <div class="card">
        <div class="card-top border-bottom text-center"> <a href="/Product/IndexFront"> Volver a la Tienda</a> <span id="logo">ARTSHOP</span> </div>
        <div class="card-body">
            <div class="row upper"> <span><i class="fa fa-check-circle-o"></i> Datos para el pago</span>  </div>

            <div class="row">
                <div class="col-md-7">
                    <div class="left border">
                        <div class="row">
                            <span class="header">Pago</span>
                            <div class="icons"> <img src="https://img.icons8.com/color/48/000000/visa.png" /> <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" /> <img src="https://img.icons8.com/color/48/000000/maestro.png" /> </div>
                        </div>

                        <span>Nombre en la tarjeta:</span> <input placeholder="" required> <br /><span>Número de tarjeta</span> <input placeholder="0125 6780 4567 9909" required>
                        <div class="row">
                            <div class="col-4"><span>Expira:</span> <input placeholder="YY/MM" required> </div>
                            <div class="col-4"><span>CVV:</span> <input id="cvv" required> </div>
                        </div> <input type="checkbox" id="save_card" class="align-left"> <label for="save_card">Guardar datos de la tarjeta</label>

                    </div>
                </div>
                <div class="col-md-5">
                    <div class="right border">
                        <div class="header">Resumen de la compra</div>
                        <span class="Cantidad"></span><span> Items</span>


                        <hr>
                        <div class="row lower">
                            <div class="col text-left">Subtotal</div>
                            <div class="col text-right TotalCarrito">$ 46.98</div>
                        </div>
                        <div class="row lower">
                            <div class="col text-left">Envío</div>
                            <div class="col text-right">Gratis</div>
                        </div>
                        <div class="row lower">
                            <div class="col text-left"><b>Total a pagar</b></div>
                            <div id="TotalCarrito" class="col text-right TotalCarrito"><b></b></div>
                        </div>
                        <div class="row lower">
                            <div class="col text-left"><a href="#"><u>Agregar cupón</u></a></div>
                        </div>
                        @*<button class="btn-pay">Confirmar Pago</button>*@
                        <input type="submit" value="Confirmar Pago" class="btn-pay" />



                    </div>
                </div>

            </div>
        </div>
        <div> </div>
    </div>
}

